.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", okrs_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_okr_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", okr_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.okr.description", :default => t("activerecord.labels.description", :default => "Description"))
          \:
        = @okr.description
      %p
        %b
          = t("activerecord.attributes.okr.objective", :default => t("activerecord.labels.objective", :default => "Objective"))
          \:
        = @okr.objective
      %p
        %b
          = t("activerecord.attributes.okr.alignment", :default => t("activerecord.labels.alignment", :default => "Alignment"))
          \:
        = @okr.alignment
      %p
        %b
        -@okr.key_results.each do |kr|
          %b Key Result
          \:
          = kr.result
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_okr_path(@okr), :class => "button"
- content_for :sidebar, render(:partial => 'sidebar')

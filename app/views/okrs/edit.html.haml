.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", okrs_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_okr_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_okr_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Okr
    .inner
      = simple_form_for @okr, :url => okr_path(@okr), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
